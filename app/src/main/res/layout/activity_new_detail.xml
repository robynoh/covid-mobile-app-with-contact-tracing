<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    >

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent">


    <LinearLayout
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:orientation="vertical"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_width="match_parent">
        <TextView
            android:id="@+id/newsHead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Governor Diri Distributes Paliatives to all Bayelsans"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:textColor="#006600"

            android:textSize="23dp"/>
        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="350dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-8312503451868577/3385385780">
        </com.google.android.gms.ads.AdView>


        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="5dp">
            <ImageView
                android:id="@+id/imgicon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:padding="5dp"
                android:src="@drawable/bigtimer"/>

            <TextView
                android:id="@+id/newsDate"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:text="23rd May 2020"
                android:textStyle="bold"

                android:padding="5dp"
                android:textSize="12sp"
                android:textColor="#4d4d4d"/>
            <Button
                android:id="@+id/share"
                android:layout_width="100dip"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:text="Share"
                android:textColor="#fff"
                android:textSize="14sp"
                android:drawableRight="@drawable/ic_share_black_24dp"
                android:paddingLeft="10dp"

                android:textStyle="bold"
                android:background="#00CC33" />
        </LinearLayout>



        <ImageView
            android:id="@+id/newsImage"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:padding="5dp" />
        <TextView
            android:id="@+id/newsContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="23rd May 2020"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:textSize="14sp"
            android:textColor="#4d4d4d"/>


    </LinearLayout>



</ScrollView>


    </LinearLayout>