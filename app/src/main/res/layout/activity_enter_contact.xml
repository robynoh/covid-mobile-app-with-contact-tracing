<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"


    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="60dp"
    android:gravity="center"


    >

    <ImageView
        android:id="@+id/newsImage"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:padding="5dp"
        android:src="@drawable/ic_settings_phone_black_24dp"
        />

    <TextView
        android:id="@+id/t1"
        android:layout_gravity="center_horizontal"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="Enter your Phone Number"
        android:textColor="#090"
        android:textSize="28sp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/t2"
        android:layout_gravity="center_horizontal"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="Register to use this service with your phone number. This will help create an ID unique to you "
        android:textColor="#4d4d4d"
        android:textSize="18sp"
        android:textStyle=""
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:padding="30dp"
        android:gravity="center"



        >

        <TextView
            android:id="@+id/code"
            android:layout_gravity="center_horizontal"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="+234"
            android:textColor="#4d4d4d"
            android:textSize="20sp"
            android:textStyle=""
            />
        <EditText
            android:id="@+id/phone"
            android:layout_height="wrap_content"
            android:layout_width="200dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/phone_continue"
        android:layout_width="300dip"
        android:layout_height="39dp"
        android:layout_centerInParent="true"
        android:background="#00CC33"
        android:padding="15dp"
        android:text="CONTINUE"
        android:textColor="#fff"
        android:textSize="14sp"


        android:textStyle="bold" />


</LinearLayout>
</LinearLayout>