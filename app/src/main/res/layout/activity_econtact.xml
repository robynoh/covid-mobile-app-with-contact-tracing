<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".econtact">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:id="@+id/heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:textSize="18sp"
            android:textAlignment="center"
            android:text="Click on any of the numbers bellow for direct dail incase of emergency  "
            android:layout_marginTop="20dp"
            android:padding="10dp"

            android:textColor="#006600"

            android:gravity="center_horizontal" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:gravity="center"
        >



        <Button
            android:id="@+id/number1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text=" 08039216821"
            android:textSize="28sp"
            android:drawableLeft="@drawable/ic_phone_black_24dp"
            android:background="#00CC33"
            android:padding="5dp"
            android:textColor="#fff"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"/>

        <Button
            android:id="@+id/number2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text=" 07019304970"
            android:textSize="28sp"
            android:drawableLeft="@drawable/ic_phone_black_24dp"
            android:background="#00CC33"
            android:padding="5dp"
            android:textColor="#fff"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"/>

        <Button
            android:id="@+id/number3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text=" 08151693570"
            android:textSize="28sp"
            android:drawableLeft="@drawable/ic_phone_black_24dp"
            android:background="#00CC33"
            android:padding="5dp"
            android:textColor="#fff"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"/>

        <Button
            android:id="@+id/number4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text=" 09010999972"
            android:textSize="28sp"
            android:drawableLeft="@drawable/ic_phone_black_24dp"
            android:background="#00CC33"
            android:padding="5dp"
            android:textColor="#fff"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"/>

        <Button
            android:id="@+id/number5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text=" 09010999969"
            android:textSize="28sp"
            android:drawableLeft="@drawable/ic_phone_black_24dp"
            android:background="#00CC33"
            android:padding="5dp"
            android:textColor="#fff"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"/>

        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="20dp"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-8312503451868577/3385385780">
        </com.google.android.gms.ads.AdView>

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>