<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">
<LinearLayout

    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >


        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="90dp"
            card_view_cardCornerRadius="10dp"
            card_view_cardElevation="20dp"


            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"

                android:padding="10dp">



                <TextView
                    android:id="@+id/faqinfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="FAQ"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="#006600"

                    />

                <ImageView
                    android:id="@+id/faqs"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:padding="5dp"
                    android:src="@drawable/ic_question_answer_black_24dp"
                    />

            </LinearLayout>
        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="90dp"
            card_view_cardCornerRadius="10dp"
            card_view_cardElevation="10dp"




            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"

                android:padding="10dp">



                <TextView
                    android:id="@+id/info2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="GUIDELINE"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="#006600"

                    />

                <ImageView
                    android:id="@+id/guide"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:padding="5dp"
                    android:src="@drawable/ic_event_note_black_24dp"
                    />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="90dp"


            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"

                android:padding="10dp">



                <TextView
                    android:id="@+id/info3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CONTACT"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="#006600"

                    />

                <ImageView
                    android:id="@+id/contact"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:padding="5dp"
                    android:src="@drawable/ic_phone_in_talk_black_24dp"
                    />


            </LinearLayout>
        </androidx.cardview.widget.CardView>




    </LinearLayout>

</LinearLayout>

    <LinearLayout

        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#fff"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >


            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="90dp"
                card_view_cardCornerRadius="10dp"
                card_view_cardElevation="20dp"


                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"

                    android:padding="10dp">



                    <TextView
                        android:id="@+id/info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="SELF ASSESMENT"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textColor="#006600"

                        />

                    <ImageView
                        android:id="@+id/assess"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:padding="5dp"
                        android:src="@drawable/ic_airline_seat_individual_suite_black_24dp"
                        />

                </LinearLayout>
            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="90dp"
                card_view_cardCornerRadius="10dp"
                card_view_cardElevation="10dp"




                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"

                    android:padding="10dp">



                    <TextView
                        android:id="@+id/asses"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="NEWS"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textColor="#006600"

                        />

                    <ImageView
                        android:id="@+id/news"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:padding="5dp"
                        android:src="@drawable/ic_format_align_justify_black_24dp"                        />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="90dp"


                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"

                    android:padding="10dp">



                    <TextView
                        android:id="@+id/video"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="VIDEOS"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textColor="#006600"

                        />

                    <ImageView
                        android:id="@+id/vid"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:padding="5dp"
                        android:src="@drawable/ic_video_library_black_24dp"
                        />


                </LinearLayout>
            </androidx.cardview.widget.CardView>




        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="411dp"
            android:layout_height="wrap_content"
            android:src="@drawable/computer"

            />

        <TextView android:id="@+id/simpleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NO NETWORK TO DISPLAY REPORT"
            android:layout_marginBottom="50dp"/>

        <Button
            android:id="@+id/connection"
            android:layout_width="150dip"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="RELOAD"
            android:textColor="#fff"
            android:textSize="14sp"
            android:padding="15dp"
            android:textStyle="bold"
            android:background="#00CC33"
            />


    </LinearLayout>
</LinearLayout>